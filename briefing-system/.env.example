# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pulsedaily_briefing
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_NAME=pulsedaily_briefing

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Content Source APIs
COINGECKO_API_KEY=your-coingecko-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
NEWS_API_ORG_KEY=your-newsapi-org-key
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# External Services
WEBHOOK_URL=your-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Security & Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=info

# Features
ENABLE_POLITICAL_CONTENT=true
ENABLE_FINANCIAL_DISCLAIMERS=true
ENABLE_CONTENT_CACHING=true
ENABLE_USER_ANALYTICS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_QUALITY_FILTERING=true

# Content Quality Settings
QUALITY_THRESHOLD=0.7
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=2000
CONTENT_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Briefing Generation
MAX_CARDS_PER_BRIEFING=8
MIN_CARDS_PER_BRIEFING=5
BRIEFING_GENERATION_TIMEOUT=30000
PERSONALIZATION_WEIGHT=0.7

# Scheduler Configuration
SCHEDULER_ENABLED=true
BRIEFING_GENERATION_CRON=0 6 * * *
CLEANUP_CRON=0 2 * * *
TIMEZONE_UTC_OFFSET=0

# Monitoring & Observability
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
SENTRY_DSN=your-sentry-dsn

# Caching Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=7200

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Background Jobs
JOB_CONCURRENCY=5
JOB_ATTEMPTS=3
JOB_BACKOFF_TYPE=exponential
JOB_BACKOFF_DELAY=2000

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Content Sources Configuration
CRYPTO_SOURCES_ENABLED=true
NEWS_SOURCES_ENABLED=true
AI_TECH_SOURCES_ENABLED=true
POLITICAL_SOURCES_ENABLED=true

# Political Neutrality Settings
POLITICAL_BALANCE_THRESHOLD=0.1
MIN_POLITICAL_SOURCES=3
MAX_POLITICAL_BIAS_SCORE=0.3

# Financial Disclaimer Settings
FINANCIAL_RISK_LEVEL=moderate
INCLUDE_DISCLAIMER_PERCENT=100
DISCLAIMER_TYPES=general,crypto,investment

# User Personalization
DEFAULT_INTEREST_WEIGHTS={"crypto_market":0.3,"ai_tech":0.3,"political_narrative":0.2,"daily_focus":0.1,"wildcard":0.1}
PERSONALIZATION_LEARNING_RATE=0.1
MIN_FEEDBACK_SAMPLES=5

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/pulsedaily_briefing_test
MOCK_EXTERNAL_APIS=false

# Development
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000