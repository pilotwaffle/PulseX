{
  "name": "pulsex-daily-briefing-backend",
  "version": "1.0.0",
  "description": "Backend API for PulseX Daily Briefing App",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:all": "ts-node src/__tests__/test-runner.ts all",
    "test:critical": "ts-node src/__tests__/test-runner.ts critical",
    "test:watch": "jest --watch",
    "test:coverage": "ts-node src/__tests__/test-runner.ts coverage",
    "test:unit": "ts-node src/__tests__/test-runner.ts unit",
    "test:integration": "ts-node src/__tests__/test-runner.ts integration",
    "test:database": "jest src/__tests__/database/**/*.test.ts",
    "test:integrations": "jest src/__tests__/integrations/**/*.test.ts",
    "test:performance": "ts-node src/__tests__/test-runner.ts performance",
    "test:security": "ts-node src/__tests__/test-runner.ts security",
    "test:ci": "jest --coverage --ci --watchAll=false --detectOpenHandles --forceExit",
    "test:verbose": "jest --verbose --detectOpenHandles --forceExit",
    "migrate": "npm run build && node dist/database/migrate.js",
    "seed": "npm run build && node dist/database/seed.js",
    "test:clean": "jest --clearCache",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}